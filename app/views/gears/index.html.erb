<p id="notice"><%= notice %></p>

<h1>Мої пристрої</h1>

<table class="table table-bordered">
  <thead>
    <tr >
      <th class="col-md-3 col-md-push-3">Назва</th>
      <th class="col-md-3 col-md-push-3">Ключ</th>
      <th class="col-md-3 col-md-push-3">Власник</th>
      <th class="col-md-3 col-md-push-3">Широта</th>
      <th class="col-md-3 col-md-push-3">Довгота</th>
      <th class="col-md-3 col-md-push-3">Місцезнаходження</th>
      <th class="col-md-3 col-md-push-3">Опис</th>
      <th class="col-md-3 col-md-push-3">Дії</th>
    </tr>
  </thead>

  <tbody>
    <% @gears.each do |gear| %>
      <tr >
        <td><%= gear.title %></td>
        <td><%= gear.definitionkey %></td>
        <td><%= gear.usinfo.user.email %></td>
        <td><%= gear.latitude %></td>
        <td><%= gear.longitude %></td>
        <td><%= gear.address %></td>
        <td><%= gear.description %>
        <td><%= link_to 'Show', gear ,:class => "btn btn-info"%>
        <%= link_to 'Edit', edit_gear_path(gear) ,:class => "btn btn-warning"%>
        <%= link_to 'Destroy', gear, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger"%>
        <%= link_to 'Device State', makes_path(gear) ,:class => "btn btn-default"%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Connect new devise', new_gear_path ,:class => "btn btn-success" %>
<div style='width: 100%;'>
  <div id="map" style='width: 100%; height: 400px;'></div>
</div>



<script src="//maps.google.com/maps/api/js?key=AIzaSyAdyx9mz5wkrBVL3_SU58Freie2JRyABQs "></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->


<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
   markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});


</script>