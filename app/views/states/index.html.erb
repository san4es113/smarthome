<h1>Listing States</h1>

<table class="table">
  <thead>
    <tr>
      <th>Property</th>
      <th>State</th>
      <th>Set</th>
      <th>Gear</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%= state.property %></td>
        <td><%= state.state %></td>
        <td><%= state.set %></td>
        <td><%= state.gear %></td>
        <td><%= state.user_id %></td>
        <td><%= link_to 'Show', state %></td>
        <td><%= link_to 'Edit', edit_state_path(state) %></td>
        <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

